datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:postgres@db:5432/postgres"
}

generator kysely {
    provider = "prisma-kysely"
    output   = "../"
    fileName = "types.ts"
}

model Contact {
    id           Int      @id @default(autoincrement())
    created_time DateTime @default(now())
    updated_time DateTime @updatedAt
    status       status   @default(ENABLED)
    first_name   String
    last_name    String
    email        String
    phone        String
    notes        String?
    verified     Boolean  @default(false)
}

enum status {
    ENABLED
    DISABLED
    DELETED
}
